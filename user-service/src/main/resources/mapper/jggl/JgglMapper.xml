<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.itts.userservice.mapper.jggl.JgglMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.itts.userservice.model.jggl.Jggl">
        <id column="id" property="id" />
        <result column="jgmc" property="jgmc" />
        <result column="jgbm" property="jgbm" />
        <result column="jglb_code" property="jglbCode" />
        <result column="jglb" property="jglb" />
        <result column="father_code" property="fatherCode" />
        <result column="cj" property="cj" />
        <result column="sfsc" property="sfsc" />
        <result column="cjsj" property="cjsj" />
        <result column="cjr" property="cjr" />
        <result column="gxsj" property="gxsj" />
        <result column="gxr" property="gxr" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, jgmc, jgbm, jglb_code, jglb, father_code, cj, sfsc, cjsj, cjr, gxsj, gxr
    </sql>

    <select id="selectByName" resultMap="BaseResultMap">
        select * from t_jggl where jgmc = #{jgmc}
    </select>
    <select id="selectByCode" resultMap="BaseResultMap">
        select * from t_jggl where jgbm= #{jgbm}
    </select>

    <select id="selectJggl" resultType="com.itts.userservice.vo.JgglVO">
        select jgmc as jgmc,
               jgbm as jgbm,
               father_code as fatherCode,
               cj as cj
        from t_jggl
    </select>
    <select id="selectStringJggl" parameterType="String" resultType="com.itts.userservice.vo.JgglVO">
        select jgmc as jgmc,
               jgbm as jgbm,
               father_code as fatherCode,
               cj as cj
        from t_jggl
        where jgmc like concat('%',#{name},'%')
    </select>

</mapper>
